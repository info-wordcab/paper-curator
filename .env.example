# ArXiv Paper Curator Configuration File
# Copy this to .env and fill in your actual values

# API Credentials
CLAUDE_API_KEY=sk-ant-api03-your-actual-key-here
POSTMARK_SERVER_TOKEN=your-postmark-server-token-here
POSTMARK_FROM_EMAIL=papers@yourdomain.com
# Default recipient email (used when topic doesn't specify one)
DEFAULT_RECIPIENT_EMAIL=you@example.com

# Gmail Configuration (for ezgmail)
# Note: You'll need to run ezgmail.init() first to set up OAuth
GMAIL_CHECK_ENABLED=true

# Database Configuration
DB_PATH=./papers_database.db
DB_BACKUP_PATH=./backups/

# ArXiv Topics Configuration
# Topics are now configured in topics.yaml
# See topics.yaml for search queries, schedules, and topic-specific settings

# Claude Configuration
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.3

# Claude Prompt Paths
CLAUDE_FILTER_PROMPT_PATH=./prompts/filter_prompt.txt
CLAUDE_SUMMARY_PROMPT_PATH=./prompts/summary_prompt.txt

# Filtering Criteria (used in Claude prompt)
FILTER_CRITERIA=novel methodology,significant results,practical applications,open source code
# Default minimum relevance score (can be overridden per topic in topics.yaml)
DEFAULT_MIN_RELEVANCE_SCORE=7

# Email Configuration
EMAIL_SUBJECT_PREFIX=[ArXiv Digest]
MAX_PAPERS_PER_EMAIL=20
MIN_PAPERS_TO_SEND=3
# Hours to wait before checking for replies
REPLY_CHECK_DELAY_HOURS=24
# Email format: html or plain
EMAIL_FORMAT=html

# GitHub Detection Keywords
GITHUB_KEYWORDS=github.com,code available,implementation,repository,source code

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/arxiv_curator.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Configuration
BATCH_SIZE=10
REQUEST_DELAY_SECONDS=3.0
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Feature Flags
ENABLE_CODE_DETECTION=true
ENABLE_PDF_DOWNLOAD=true
ENABLE_REPLY_PROCESSING=true
ENABLE_FEEDBACK_LEARNING=true
DRY_RUN=false

# Scheduling
# UTC timezone for consistency
TIMEZONE=UTC

# File Storage
PDF_STORAGE_PATH=./pdfs/
TEMP_PATH=./temp/

# Summary Configuration
SUMMARY_MIN_LENGTH=100
SUMMARY_MAX_LENGTH=300
INCLUDE_METHODOLOGY=true
INCLUDE_RESULTS=true
INCLUDE_LIMITATIONS=true

# Reply Processing
REPLY_KEYWORDS=Selection:,Edits:,Feedback:
MAX_EDIT_HISTORY=50

# Anthropic SDK specific
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_TIMEOUT=60

# Rate Limiting
ARXIV_RATE_LIMIT=3
CLAUDE_RATE_LIMIT=10
POSTMARK_RATE_LIMIT=10

# Debug Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Maintenance
AUTO_CLEANUP_DAYS=90
MAX_DB_SIZE_MB=500